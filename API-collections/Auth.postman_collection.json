	"item": [
		{
			"name": "Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let response = pm.response.json();",
							"let access_token = response?.data?.access;",
							"let refresh_token = response?.data?.refresh;",
							" ",
							"if (access_token) {",
							"    pm.environment.set(\"access_token\", access_token);",
							"    pm.environment.set(\"refresh_token\", refresh_token)",
							"    console.log(\"Token saved to environment:\", access_token);",
							"} else {",
							"    console.warn(\"Token not found in response!\");",
							"}"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"username\": \"root\",\n    \"password\": \"root#123\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseURL}}/token/",
					"host": [
						"{{baseURL}}"
					],
					"path": [
						"token",
						""
					]
				}
			},
			"response": []
		},
